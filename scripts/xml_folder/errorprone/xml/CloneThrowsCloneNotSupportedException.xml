<?xml version="1.0" encoding="UTF-8"?>
<test-data
    xmlns="http://pmd.sourceforge.net/rule-tests"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/rule-tests http://pmd.sourceforge.net/rule-tests_1_0_0.xsd">

    <test-code>
        <description>ok, throws CloneNotSupportedException</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
public class Foo {
    void clone() throws CloneNotSupportedException {
    }
}
        ]]></code>
    </test-code>

    <test-code>
        <description>bad</description>
        <expected-problems>1</expected-problems>
        <code><![CDATA[
public class Foo {
    void clone() {
    }
}
        ]]></code>
    </test-code>

    <test-code>
        <description>final class, rule does not apply</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
public final class Foo {
    void clone() {
    }
}
        ]]></code>
    </test-code>

    <test-code>
        <description>testing with multiple methods</description>
        <expected-problems>1</expected-problems>
        <code><![CDATA[
public class Foo {
    void clone() {}
    void foo() {}
    void bar() {}
}
        ]]></code>
    </test-code>
</test-data>
